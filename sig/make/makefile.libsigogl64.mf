SRCDIR = $(ROOT)/src/sigogl/
LIB = $(LIBDIR)/libsigogl64.a

CPPFILES := $(shell echo $(SRCDIR)*.cpp)
OBJFILES = $(CPPFILES:.cpp=.o)
OBJECTS = $(notdir $(OBJFILES))
DEPENDS = $(OBJECTS:.o=.d)

$(LIB): $(OBJECTS)
	ar -r $(LIB) $(OBJECTS)

%.o: $(SRCDIR)%.cpp
	echo "compiling:" $<;
	$(CC) -c $(CFLAGS64) $< -o $@

%.d: $(SRCDIR)%.cpp
	echo "upddepend:" $<;
	$(CC) -MM $(CFLAGS64) $< > $@

ifneq ($(MAKECMDGOALS),clean)
-include $(DEPENDS)
endif


